<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/sombra_buttoncardapio"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- Imagem do produto com o botão de quantidade sobreposto -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <!-- Imagem do produto -->
        <ImageView
            android:id="@+id/imagemProduto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/imagem_carregando" />

        <!-- Botão de quantidade -->
        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/sombra_buttoncardapio"
            android:backgroundTint="@color/laranja"
            android:gravity="center"
            android:layout_gravity="top|end"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/quantidadeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- Informações do produto -->
    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <!-- Nome do produto -->
        <TextView
            android:id="@+id/nomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semibold"
            android:maxLines="2"
            android:text="Nome do Produto"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1" />

        <!-- Preço do produto -->
        <TextView
            android:id="@+id/precoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="R$ xx,xx"
            android:textColor="@color/laranja"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Botão de remover -->
    <ImageButton
        android:id="@+id/btnRemoverProduto"
        android:layout_width="41dp"
        android:layout_height="69dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/lixo" />
</LinearLayout>
