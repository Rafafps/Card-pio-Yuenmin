<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botão Voltar -->
        <TextView
            android:id="@+id/botaoVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:drawableStart="@drawable/voltar"
            android:drawablePadding="8dp"
            android:paddingTop="30dp"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Imagem do Produto -->
        <ImageView
            android:id="@+id/imagemProduto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/nomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Barra Laranja -->
        <View
            android:layout_width="323dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/laranja"
            android:layout_marginBottom="8dp" />

        <!-- Descrição do Produto -->
        <TextView
            android:id="@+id/descricaoProduto"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginBottom="16dp"
            android:text="Descrição do produto aqui."
            android:textColor="@color/cinza"
            android:textSize="16sp" />

        <!-- Observação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icObservacao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/obs"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tituloObservacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alguma observação?"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Campo de Observação -->
        <EditText
            android:id="@+id/observacaoProduto"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_semfundo"
            android:hint="Ex: Tirar cogumelo, molho à parte etc."
            android:padding="12dp" />

        <!-- Quantidade e Adicionar ao Carrinho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="20dp">

            <!-- Botão Diminuir -->
            <Button
                android:id="@+id/botaoDiminuir"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:backgroundTint="@color/laranja"
                android:textColor="@color/white" />

            <!-- Quantidade -->
            <TextView
                android:id="@+id/quantidadeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <!-- Botão Aumentar -->
            <Button
                android:id="@+id/botaoAumentar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:backgroundTint="@color/laranja"
                android:textColor="@color/white" />

            <!-- Botão Adicionar -->
            <TextView
                android:id="@+id/botaoAdicionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/laranja"
                android:background="@drawable/sombra_buttoncardapio"
                android:padding="12dp"
                android:gravity="center"
                android:text="@string/botao_adicionar"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
