<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".view.DetalhesProdutoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botão Voltar -->
        <TextView
            android:id="@+id/botaoVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:drawableStart="@drawable/voltar"
            android:drawablePadding="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"/>

        <!-- Imagem do Produto -->
        <ImageView
            android:id="@+id/imagemProduto"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop" />

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/nomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Barra Laranja -->
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/laranja"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Descrição do Produto -->
        <TextView
            android:id="@+id/descricaoProduto"
            android:layout_width="335dp"
            android:layout_height="106dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_light"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="15dp"
            android:text="Descrição do produto aqui."
            android:textColor="@color/cinza"
            android:textSize="18sp" />

        <!-- Observação -->
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/icObservacao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/obs"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tituloObservacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alguma observação?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_medium"/>
        </LinearLayout>

        <!-- Campo de Observação -->
        <EditText
            android:id="@+id/observacaoProduto"
            android:layout_width="335dp"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_semfundo"
            android:gravity="top|start"
            android:textSize="13sp"
            android:hint="Ex: Tirar cogumelo, molho à parte etc."
            android:fontFamily="@font/montserrat_light"
            android:padding="12dp" />

        <!-- Quantidade e Adicionar ao Carrinho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <!-- Botão Diminuir -->
            <TextView
                android:id="@+id/botaoDiminuir"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sombra_buttoncardapio"
                android:backgroundTint="@color/laranja"
                android:gravity="center"
                android:text="-\n\n"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <!-- Quantidade -->
            <TextView
                android:id="@+id/quantidadeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Botão Aumentar -->
            <TextView
                android:id="@+id/botaoAumentar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sombra_buttoncardapio"
                android:backgroundTint="@color/laranja"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <!-- Botão Adicionar -->
            <TextView
                android:id="@+id/botaoAdicionar"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/sombra_buttoncardapio"
                android:backgroundTint="@color/laranja"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:ellipsize="none"
                android:singleLine="false"
                android:scrollHorizontally="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
